<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/mode_bar"
		android:layout_width="match_parent" android:layout_height="40dip"
		android:background="@android:color/black" android:orientation="horizontal">
		<Button
		    android:id="@+id/btn_back"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="7dp"
		  android:background="@drawable/ic_launcher"
		    />
		<TextView android:id="@+id/back_text" android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/btn_back"
			android:layout_marginLeft="5dp"
			android:text="@string/name"
			android:layout_centerVertical="true"
			android:textSize="17sp" />
		<ImageButton
		    android:id="@+id/min_button3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="17dp"
		    android:background="@drawable/searce"
		    />
		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_alignRight="@+id/btn_back"
		    />

</RelativeLayout>